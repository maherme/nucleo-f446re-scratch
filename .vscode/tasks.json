{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build All",
            "command": "make all",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "base": "$gcc", 
                "fileLocation": ["relative", "${workspaceFolder}"]
            }
        },
        {
            "type": "shell",
            "label": "Build Debug",
            "command": "make MODE=debug",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "base": "$gcc", 
                "fileLocation": ["relative", "${workspaceFolder}"]
            }
        },
        {
            "type": "shell",
            "label": "Build Library",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "base": "$gcc", 
                "fileLocation": ["relative", "${workspaceFolder}"]
            }
        },
        {
            "type": "shell",
            "label": "Clean All",
            "command": "make clean-all",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "base": "$gcc", 
                "fileLocation": ["relative", "${workspaceFolder}"]
            }
        },
        {
            "type": "shell",
            "label": "Clean Debug",
            "command": "make clean MODE=debug",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "base": "$gcc", 
                "fileLocation": ["relative", "${workspaceFolder}"]
            }
        },
        {
            "type": "shell",
            "label": "Clean Library",
            "command": "make clean",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "base": "$gcc", 
                "fileLocation": ["relative", "${workspaceFolder}"]
            }
        }
    ]
}